<h5>タスク一覧</h5>

<p><%= notice %></p>

<h6>タスク検索</h6>
<%= search_form_for @search do |f| %>
  <div class="form-group">
    <%= f.label :title_cont, "タスク名" %>
    <%= f.search_field :title_cont %>
  </div>

  <div class="actions">
    <%= f.submit "Search" %>
  </div>
<% end %>

<%= paginate @tasks %>

<table>
  <tr>
    <th>タスク名</th>
    <th><%= sort_link(@search, :limit, default_order: :asc) %></th>
    <th><%= sort_link(@search, :priority, default_order: :asc) %></th>
    <th><%= sort_link(@search, :created_at) %></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="task_row">
    <td><%= task.title %></td>
    <td><%= task.limit %></td>
    <td><%= task.priority %></td>
    <td><%= task.created_at %></td>
    <td><%= link_to "タスク詳細", task_path(task.id) %></td>
    <td><%= link_to "タスク編集", edit_task_path(task.id) %></td>
    <td><%= link_to 'タスク削除', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }%></td>
  </tr>
<% end %>


</table>

