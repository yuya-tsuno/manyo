<h5>タスク一覧</h5>

<p><%= notice %></p>

<h6>タスク検索</h6>
<%= form_tag tasks_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :title => nil %>
  </p>
<% end %>

<table>
  <tr>
    <th>タスク名</th>
    <th><%= link_to "終了期限", tasks_path(limit_sort_expired: "true") %></th>
    <th><%= link_to "優先度", tasks_path(priority_sort_expired: "true") %></th>
    <th><%= link_to "作成日時", tasks_path %></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="task_row">
    <td><%= task.title %></td>
    <td><%= task.limit %></td>
    <td><%= task.priority %></td>
    <td><%= task.created_at %></td>
    <td><%= link_to "タスク詳細", task_path(task.id) %></td>
    <td><%= link_to "タスク編集", edit_task_path(task.id) %></td>
    <td><%= link_to 'タスク削除', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }%></td>
  </tr>
<% end %>


</table>

